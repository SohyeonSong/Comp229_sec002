<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<section>
    <!--Common backgroud for all page-->
      <div class="curve"></div>   

<!-- Content for the Update page-->
<div class="container" id="allPage">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1 id="login"><%= title %></h1><br>

            <form class="form" method="POST" id="loginListForm">
                <div class="form-group">
                    <label for="nameTextField" id="bold">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact Name"
                    name="name" 
                    value="<%= contact.name %>"
                    required>
                </div><br>

                <div class="form-group">
                    <label for="authorTextField" id="bold">Contact Number</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the Contact Number"
                    name="number" 
                    value="<%= contact.number %>"
                    required>                    
                </div><br>

                <div class="form-group">
                    <label for="publishedTextField" id="bold">Email Address</label>
                    <input type="email" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Email Address"
                    name="email" 
                    value="<%= contact.email %>"
                    required>                    
                </div><br>


                <button class="btn btn-outline-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>&nbsp;

                    <a href="/contact-list" class="btn btn-outline-warning">
                        <i class="fas fa-undo"></i> Cancel</a>&nbsp;

                    <a href="/contact-list/delete/<%= contact._id %>" class="btn btn-outline-danger">
                                <i class="fas fa-trash-alt"></i> Delete</a>
            </form>
        </div>
    </div>
</div>
</section>


<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>